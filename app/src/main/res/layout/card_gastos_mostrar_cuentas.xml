<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:elevation="8dp"
    tools:targetApi="lollipop"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/card_gastos_imagen"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="15dp"
                android:src="@mipmap/ic_launcher"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="15dp" />
            <TextView
                android:id="@+id/card_gastos_cuenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cuenta1"
                android:layout_margin="4dp"
                android:layout_toEndOf="@id/card_gastos_imagen"
                android:layout_toRightOf="@id/card_gastos_imagen" />
            <TextView
                android:id="@+id/card_gastos_nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nombre"
                android:layout_margin="4dp"
                android:layout_toEndOf="@id/card_gastos_imagen"
                android:layout_toRightOf="@id/card_gastos_imagen"
                android:layout_below="@id/card_gastos_cuenta"/>

            <TextView
                android:id="@+id/card_gastos_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0.00"
                android:layout_marginRight="15dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="4dp"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="4dp"
                android:layout_alignParentEnd="true" />
            <TextView
                android:id="@+id/card_gastos_fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10/04/2018"
                android:layout_marginRight="15dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="4dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/card_gastos_total"
                android:layout_marginStart="4dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp" />

            <TextView
                android:id="@+id/card_gastos_totaltxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total:"
                android:layout_margin="4dp"
                android:layout_toStartOf="@id/card_gastos_total"
                android:layout_toLeftOf="@id/card_gastos_total" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Producto"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Cantidad"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Precio"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Subtotal"
                android:layout_weight="1"
                />

        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/card_gastos_listview">


        </ListView>


    </LinearLayout>

</android.support.v7.widget.CardView>