<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ing_imagen1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="15dp"
                android:src="@mipmap/ic_launcher"/>
            <TextView
                android:id="@+id/ing_numCuenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cuenta1"
                android:layout_margin="4dp"
                android:layout_toEndOf="@id/ing_imagen1"
                android:layout_toRightOf="@id/ing_imagen1" />
            <TextView
                android:id="@+id/ingCard_nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nombre"
                android:layout_margin="4dp"
                android:layout_toEndOf="@id/ing_imagen1"
                android:layout_toRightOf="@id/ing_imagen1"
                android:layout_below="@id/ing_numCuenta"/>

            <TextView
                android:id="@+id/ingcard_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$17.00"
                android:layout_marginRight="15dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="4dp"
                android:layout_alignParentRight="true"
                 />
            <TextView
                android:id="@+id/ingcard_fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10/04/2018"
                android:layout_marginRight="15dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="4dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/ingcard_total"
                />

            <TextView
                android:id="@+id/ing_totaltext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="total:"
                android:layout_margin="4dp"
                android:layout_toStartOf="@id/ingcard_total"
                android:layout_toLeftOf="@id/ingcard_total" />

        </RelativeLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Producto"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Cantidad"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Precio"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Subtotal"
                android:layout_weight="1"
                />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>


    </LinearLayout>

</android.support.v7.widget.CardView>